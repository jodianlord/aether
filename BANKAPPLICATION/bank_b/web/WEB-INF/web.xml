<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>com.aether.controller.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransactionServlet</servlet-name>
        <servlet-class>com.aether.blockchain.TransactionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IdentityServlet</servlet-name>
        <servlet-class>com.aether.controller.IdentityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ParseJson</servlet-name>
        <servlet-class>com.aether.util.ParseJson</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetVerification</servlet-name>
        <servlet-class>com.aether.util.GetVerification</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/SignUpServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransactionServlet</servlet-name>
        <url-pattern>/TransactionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IdentityServlet</servlet-name>
        <url-pattern>/IdentityServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ParseJson</servlet-name>
        <url-pattern>/ParseJson</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetVerification</servlet-name>
        <url-pattern>/GetVerification</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>identity.jsp</welcome-file>
    </welcome-file-list>
</web-app>
